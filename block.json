{
  "apiVersion": 2,
  "name": "myplugin/testimonial-carousel",
  "title": "Testimonial Carousel",
  "category": "widgets",
  "icon": "format-quote",
  "description": "A testimonial carousel block using Swiper.js",
  "editorScript": "file:./build/index.js",
  "style": "file:./build/style-index.css",
  "attributes": {
  "testimonials": {
    "type": "array",
    "source": "query",
    "selector": ".swiper-slide",
    "query": {
      "imageUrl": {
        "source": "attribute",
        "selector": "img",
        "attribute": "src"
      },
      "text": {
        "source": "text",
        "selector": "p"
      },
      "name": {
        "source": "text",
        "selector": "strong"
      }
    }
  }
}
,
  "supports": {
    "html": false
  }
}
